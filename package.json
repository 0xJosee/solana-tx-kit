{
  "name": "solana-tx-kit",
  "version": "0.1.4",
  "description": "Production-grade Solana transaction infrastructure: retry, priority fees, Jito bundles, RPC failover, and more.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check src/ tests/",
    "lint:fix": "biome check --write src/ tests/",
    "format": "biome format --write src/ tests/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run lint && pnpm run typecheck && pnpm run test && pnpm run build"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@solana/web3.js": "^1.95.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT",
  "keywords": ["solana", "transaction", "retry", "jito", "priority-fee", "rpc", "failover", "web3"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xJosee/solana-tx-kit.git"
  },
  "bugs": {
    "url": "https://github.com/0xJosee/solana-tx-kit/issues"
  },
  "homepage": "https://github.com/0xJosee/solana-tx-kit#readme"
}
